// include the library code:
#include <LiquidCrystal.h>
const int pingPin = 7;

long duration;
int distancecm;
long distancein;
const int RS = 12, EN = 11, D7 = 2, D6 = 3, D5 =4, D4 = 5;

LiquidCrystal lcd(RS,EN,D4,D5,D6,D7);

void setup() {
  // set up the LCD's number of columns and rows:
  lcd.begin(16,2);
  pinMode(7, OUTPUT);
  digitalWrite(8, LOW); 
  // Print a message to the LCD.
  //lcd.print("hello, world!");
  //Serial.begin(9600);
}

void loop() {
  //Trigger the sensor with a 2usec HIGH pulse
  digitalWrite(7, HIGH);
  delayMicroseconds(2);
  digitalWrite(7, LOW);

  pinMode(7, INPUT);              
  duration = pulseIn(7, HIGH);    
  distancecm = duration*0.034/2;
  distancein = distancecm*0.3937;     //1cm = 0.3937in

  //displaying distance to LCD
  lcd.clear();
  lcd.print("Distance:");
  	lcd.print(distancecm);
  lcd.print("cm");
  lcd.setCursor(10,1);
  	lcd.print(distancein);
  lcd.print("in");
  delay(100);
  pinMode(7, OUTPUT);            
  digitalWrite(7, LOW);

}
